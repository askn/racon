<form class="form-horizontal" action="/<%= resource.table_name %>" method="post">

    <% resource.fields.each do |field| %>
    <% if resource.form_attributes.includes?(field[:column_name]) %>
    <div class="form-group">
        <%= Helper.form_render_field(field) %>
    </div>
    <% end %>
    <% end %>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Send</button>
        </div>
    </div>
</form>
